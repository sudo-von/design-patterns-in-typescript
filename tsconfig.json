{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "src",
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "target": "ES5",
        "watch": true,
        "lib": [ 
            "es2015",
            "es2018",
            "dom"
